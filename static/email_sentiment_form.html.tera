<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Rusty</title>
    <meta name="description" content="A todo application written in Rocket.">
    <meta name="author" content="Sergio Benitez">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/skeleton.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="image/png" href="/images/favicon.png">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>
        function reqListener () {
            console.log(this.responseText);
        }

        function submitForm() {
            let email_sentiment_form = {
                'messageId': $('#messageId').val(),
                'mailbox': $('#mailbox').val()
            }

            var xhr = new XMLHttpRequest();
            xhr.addEventListener("load", reqListener);
            xhr.open('POST', '/fetch_inbox_top/'+$('#mailbox').val());
            xhr.setRequestHeader('Content-Type', 'application/json;charset=UTF-8');
            xhr.send(JSON.stringify(email_sentiment_form));
        }
    </script>
</head>
<body>
<div class="container">
    <p><!--Nothing to see here --></p>

    <div class="row">
        <h4>Sentiment Form</h4>
    </div>
    <div class="row">
        <label>Message Id:</label><input type="text" name="messageId" id="messageId"/>
    </div>
    <div class="row">
        <label>Email Address:</label><input type="text" name="mailbox" id="mailbox"/>
    </div>
    <div class="row">
        <button onclick="submitForm()">Submit</button>
    </div>
</div>
{% if sentiment %}
<div class="container">
    <p><!--Nothing to see here --></p>

    <div class="row">
        <h4>Sentiment Scores</h4>
    </div>
    <div>
        Positive Score: {{ sentiment_pos }}
    </div>
    <div>
        Neutral Score: {{ sentiment_neu }}
    </div>
    <div>
        Mixed Score: {{ sentiment_mix }}
    </div>
    <div>
        Negative Score: {{ sentiment_neg }}
    </div>
    <pre style="padding-top: 10%">
        {{ body }}
    </pre>
</div>
{% endif %}
</body>

</html>
